{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "projects": {
    "exception-filters": {
      "type": "library",
      "root": "libs/exception-filters",
      "entryFile": "index",
      "sourceRoot": "libs/exception-filters/src",
      "compilerOptions": {
        "tsConfigPath": "libs/exception-filters/tsconfig.lib.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "pg-connect": {
      "type": "library",
      "root": "libs/pg-connect",
      "entryFile": "index",
      "sourceRoot": "libs/pg-connect/src",
      "compilerOptions": {
        "tsConfigPath": "libs/pg-connect/tsconfig.lib.json"
      }
    },
    "validation-pipe": {
      "type": "library",
      "root": "libs/validation-pipe",
      "entryFile": "index",
      "sourceRoot": "libs/validation-pipe/src",
      "compilerOptions": {
        "tsConfigPath": "libs/validation-pipe/tsconfig.lib.json"
      }
    },
    "interceptors": {
      "type": "library",
      "root": "libs/interceptors",
      "entryFile": "index",
      "sourceRoot": "libs/interceptors/src",
      "compilerOptions": {
        "tsConfigPath": "libs/interceptors/tsconfig.lib.json"
      }
    },
    "i18n": {
      "type": "library",
      "root": "libs/i18n",
      "entryFile": "index",
      "sourceRoot": "libs/i18n/src",
      "compilerOptions": {
        "tsConfigPath": "libs/i18n/tsconfig.lib.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": false,
    "assets": [
      {
        "include": "i18n/**/*.json",
        "outDir": "dist/assets",
        "watchAssets": true
      }
    ]
  }
}