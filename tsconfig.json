{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/exception-filters": [
        "libs/exception-filters/src"
      ],
      "@app/exception-filters/*": [
        "libs/exception-filters/src/*"
      ],
      "@lib/common": [
        "libs/common/src"
      ],
      "@lib/common/*": [
        "libs/common/src/*"
      ],
      "@db/pg-connect": [
        "libs/pg-connect/src"
      ],
      "@db/pg-connect/*": [
        "libs/pg-connect/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}